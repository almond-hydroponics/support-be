{
  "name": "support-be",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "yarn run tsc",
    "tsc": "tsc --project tsconfig.compile.json",
    "test": "yarn run test:lint && yarn run test:coverage",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:coverage": "yarn run test:unit",
    "tsc:w": "tsc --project tsconfig.json -w",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn run lint -- --fix",
    "start": "nodemon --watch \"src/**/*.ts\" --ignore \"node_modules/**/*\" --exec ts-node src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "docker:build": "yarn build && docker-compose build",
    "deploy": "exit 0"
  },
  "author": "Mfuon",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@tsed/ajv": "^6.62.2",
    "@tsed/common": "^6.62.2",
    "@tsed/core": "^6.62.2",
    "@tsed/di": "^6.62.2",
    "@tsed/exceptions": "^6.62.4",
    "@tsed/json-mapper": "^6.62.2",
    "@tsed/mongoose": "^6.62.2",
    "@tsed/passport": "^6.62.2",
    "@tsed/platform-express": "^6.62.2",
    "@tsed/schema": "^6.62.2",
    "@tsed/socketio": "^6.62.2",
    "@tsed/swagger": "^6.62.3",
    "@tsed/typeorm": "^6.62.2",
    "@types/swagger-schema-official": "^2.0.22",
    "ajv": "^8.6.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "mongodb": "^4.1.0",
    "mongoose": "^5.13.7",
    "passport": "^0.4.1",
    "socket.io": "^4.1.3",
    "typeorm": "^0.2.36",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@tsed/cli-plugin-eslint": "3.5.0",
    "@tsed/cli-plugin-jest": "3.5.0",
    "@tsed/cli-plugin-passport": "3.5.0",
    "@tsed/cli-plugin-typeorm": "3.5.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "tsed": {
    "packageManager": "yarn",
    "convention": "default"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  }
}
